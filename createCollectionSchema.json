db.createCollection("cars", {
    validator: {
        $jsonSchema : {
            bsonType: "object",
            required: ["model", "year"],
            properties: {
                model: {
                    bsonType: "string",
                    description: ".........",

                },
                madeBy: {
                    bsonType: "string",
                    minLength: 2
                },
                year: {
                    bsonType: "int",
                    minimum: 1900,
                    maximum: 2050

                }
            }
        }
    }
})


db.createCollection("logs", {
    capped: true,
    size: 2048,
    max: 5
})